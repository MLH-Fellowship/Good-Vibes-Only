            <label for="email">ğŸ˜‡ your email: </label>
            <input type="email" class="form-control form-control-sm" name="email" aria-describedby="emailHelp" value="<%- user.email %>" disabled>
          </div>
          <!-- bio -->
          <div class="form-group">
            <label for="bio">ğŸ˜‡ tell us about yourself:</label>

            <textarea class="form-control form-control-sm" name="bio" rows="2"><%- user.bio %></textarea>
          </div>
          <div class="d-flex justify-content-center align-items-center">
            <button type="submit" class="btn btn-outline-success mr-3">ğŸ‰ Save settings!</button>
            <a href="/updatepassword" role="button" class="btn btn-outline-primary">ğŸ” Update password</a>
          </div>
        </form>
      </div>
    </div>
  </body>
  <%- include('./components/scripts'); -%>
</html>